    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "glob": "^10.0.0",
    "typescript": "~5.6.2",
    "vitest": "^1.0.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=20.0"
  }
